    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2",
    "uglify-js": "^3.12.1",
    "webpack": "^5.24.2",
