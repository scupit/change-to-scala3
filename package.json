{
  "name": "node-root-project",
  "version": "1.0.0",
  "description": "Base project for use with NodeJS",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ./tsconfig.json",
    "prod": "tsc -p ./tsconfig.json --sourceMap false --inlineSourceMap false && webpack ./build/index.js -o ./dist --output-filename index.min.js --mode production --target node",
    "dev": "nodemon --watch src/**/*.{ts,js} --exec \"ts-node\" src/index.ts"
  },
  "author": "Skylar Cupit",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3",
    "uglify-js": "^3.14.2",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
